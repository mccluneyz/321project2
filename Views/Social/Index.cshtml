@model IEnumerable<RecycleRank.Models.Post>
@{
    ViewData["Title"] = "Community Feed";
    var currentUserId = Context.Session.GetInt32("UserId");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>üå± Community Feed</h2>
                <a href="/Social/Create" class="btn btn-success">+ Share Your Recycling</a>
            </div>

            @if (Model.Any())
            {
                @foreach (var post in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    @post.User.Name.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <h6 class="mb-0">@post.User.Name</h6>
                                    <small class="text-muted">@post.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                                </div>
                            </div>
                            <p class="card-text">@post.Content</p>
                            @if (!string.IsNullOrEmpty(post.ImagePath))
                            {
                                <div class="mt-3">
                                    <img src="@post.ImagePath" alt="Post image" class="img-fluid rounded" style="max-height: 400px; width: 100%; object-fit: cover;">
                                </div>
                            }
                            @if (currentUserId.HasValue && post.UserId == currentUserId.Value)
                            {
                                <div class="mt-3">
                                    <a href="/Social/Delete/@post.Id" class="btn btn-sm btn-outline-danger" 
                                       onclick="return confirm('Are you sure you want to delete this post?');">üóëÔ∏è Delete Post</a>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <h4 class="text-muted">No posts yet!</h4>
                    <p class="text-muted">Be the first to share your recycling experience with the community.</p>
                    <a href="/Social/Create" class="btn btn-success">Share Your First Post</a>
                </div>
            }
        </div>
    </div>
</div>
