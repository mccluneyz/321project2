// 3D Reward Animation Function
function showRewardAnimation(rewardName, tierId) {
    // Create overlay
    const overlay = document.createElement('div');
    overlay.className = 'reward-animation-overlay';
    
    // Create animation container
    const container = document.createElement('div');
    container.className = 'reward-animation-container';
    
    // Get reward icon based on tier
    const rewardIcon = getRewardIcon(tierId);
    
    // Create reward icon element
    const iconElement = document.createElement('div');
    iconElement.className = 'reward-animation-icon';
    iconElement.innerHTML = rewardIcon;
    
    // Create glow effect
    const glowElement = document.createElement('div');
    glowElement.className = 'reward-glow';
    
    // Create particles
    const particlesContainer = document.createElement('div');
    particlesContainer.style.position = 'absolute';
    particlesContainer.style.top = '50%';
    particlesContainer.style.left = '50%';
    particlesContainer.style.transform = 'translate(-50%, -50%)';
    
    // Create multiple particles
    for (let i = 0; i < 12; i++) {
        const particle = document.createElement('div');
        particle.className = 'reward-particles';
        const angle = (i * 30) * Math.PI / 180;
        const distance = 100 + Math.random() * 50;
        const x = Math.cos(angle) * distance;
        const y = Math.sin(angle) * distance;
        particle.style.setProperty('--particle-x', x + 'px');
        particle.style.setProperty('--particle-y', y + 'px');
        particle.style.animationDelay = Math.random() * 0.5 + 's';
        particlesContainer.appendChild(particle);
    }
    
    // Create reward text
    const textElement = document.createElement('div');
    textElement.className = 'reward-text';
    textElement.textContent = rewardName;
    
    const subtextElement = document.createElement('div');
    subtextElement.className = 'reward-subtext';
    subtextElement.textContent = 'REWARD UNLOCKED!';
    
    // Assemble the animation
    container.appendChild(glowElement);
    container.appendChild(iconElement);
    container.appendChild(particlesContainer);
    container.appendChild(textElement);
    container.appendChild(subtextElement);
    overlay.appendChild(container);
    
    // Add to page
    document.body.appendChild(overlay);
    
    // Remove after animation completes
    setTimeout(() => {
        if (overlay.parentNode) {
            overlay.parentNode.removeChild(overlay);
        }
    }, 3000);
}

