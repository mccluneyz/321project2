@{
    ViewData["Title"] = "Flagged Events";
    var flaggedEvents = ViewBag.FlaggedEvents as List<RecycleRank.Models.RecyclingEvent> ?? Model as List<RecycleRank.Models.RecyclingEvent>;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Navigation -->
            <div class="page-navigation mb-4">
                <a href="/Admin/Index" class="btn btn-outline-secondary">
                    <span>‚öôÔ∏è</span> Admin Dashboard
                </a>
                <a href="/Home/Index" class="btn btn-outline-primary">
                    <span>üè†</span> Home
                </a>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">üö© Flagged Events</h1>
                <a href="/Admin/AllRecyclingEvents" class="btn btn-info">
                    <i class="fas fa-list"></i> View All Events
                </a>
            </div>

            <!-- Flagged Events List -->
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">Events Requiring Review</h5>
                </div>
                <div class="card-body">
                    @if (flaggedEvents != null && flaggedEvents.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Event ID</th>
                                        <th>User</th>
                                        <th>Material</th>
                                        <th>Quantity</th>
                                        <th>Location</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var evt in flaggedEvents)
                                    {
                                        <tr>
                                            <td>@evt.Id</td>
                                            <td>@evt.User?.Name</td>
                                            <td>@evt.Material</td>
                                            <td>@evt.Quantity</td>
                                            <td>@evt.Bin?.Name</td>
                                            <td>@evt.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                <form action="/Admin/ApproveEvent" method="post" style="display: inline;">
                                                    <input type="hidden" name="eventId" value="@evt.Id">
                                                    <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Approve this recycling event?')">
                                                        <i class="fas fa-check"></i> Approve
                                                    </button>
                                                </form>
                                                <form action="/Admin/RejectEvent" method="post" style="display: inline;">
                                                    <input type="hidden" name="eventId" value="@evt.Id">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Reject this recycling event? This will remove it from the system.')">
                                                        <i class="fas fa-times"></i> Reject
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-flag fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No flagged events found</h5>
                            <p class="text-muted">All recycling events are currently approved. Great job!</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Instructions -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card shadow">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">üìã Review Guidelines</h6>
                        </div>
                        <div class="card-body">
                            <ul class="mb-0">
                                <li><strong>Approve:</strong> The recycling event appears legitimate and should be kept</li>
                                <li><strong>Reject:</strong> The event seems suspicious or fraudulent and should be removed</li>
                                <li>Consider factors like unusual quantities, timing, or user behavior</li>
                                <li>When in doubt, approve the event to maintain user trust</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
