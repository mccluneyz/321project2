@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Navigation -->
            <div class="page-navigation mb-4">
                <a href="/Home/Index" class="btn btn-outline-primary">
                    <span>üè†</span> Home
                </a>
                <a href="/Recycling/Index" class="btn btn-outline-success">
                    <span>‚ôªÔ∏è</span> Recycling
                </a>
                <a href="/Leaderboard/Index" class="btn btn-outline-warning">
                    <span>üèÜ</span> Leaderboard
                </a>
            </div>
            
            <h1 class="mb-4">‚öôÔ∏è Admin Dashboard</h1>
            
            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card bg-primary text-white shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">@ViewBag.TotalUsers</h4>
                                    <p class="card-text">Total Users</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-success text-white shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">@ViewBag.TotalBins</h4>
                                    <p class="card-text">Recycling Bins</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-trash-alt fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-info text-white shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">@ViewBag.TotalMaterials</h4>
                                    <p class="card-text">Material Types</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-boxes fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-warning text-white shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">@ViewBag.TotalRecyclingEvents</h4>
                                    <p class="card-text">Recycling Events</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-recycle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Management Actions -->
            <div class="row mb-4">
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-trash-alt fa-3x text-success"></i>
                            </div>
                            <h5 class="card-title">Manage Bins</h5>
                            <p class="card-text">Add, edit, or remove recycling bin locations.</p>
                            <a href="/Admin/ManageBins" class="btn btn-success">Manage Bins</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-boxes fa-3x text-info"></i>
                            </div>
                            <h5 class="card-title">Manage Materials</h5>
                            <p class="card-text">Configure recyclable materials and point values.</p>
                            <a href="/Admin/ManageMaterials" class="btn btn-info">Manage Materials</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-users fa-3x text-primary"></i>
                            </div>
                            <h5 class="card-title">Manage Users</h5>
                            <p class="card-text">View all users and manage admin privileges.</p>
                            <a href="/Admin/ManageUsers" class="btn btn-primary">Manage Users</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-flag fa-3x text-warning"></i>
                            </div>
                            <h5 class="card-title">Flagged Events</h5>
                            <p class="card-text">Review and moderate flagged recycling events.</p>
                            <a href="/Admin/FlaggedEvents" class="btn btn-warning">Review Flags</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">üìä Recent Recycling Activities</h5>
                        </div>
                        <div class="card-body">
                            @if (ViewBag.RecentEvents != null && ViewBag.RecentEvents.Count > 0)
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>User</th>
                                                <th>Material</th>
                                                <th>Quantity</th>
                                                <th>Location</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var evt in ViewBag.RecentEvents)
                                            {
                                                <tr>
                                                    <td>@evt.User?.Name</td>
                                                    <td>@evt.Material</td>
                                                    <td>@evt.Quantity</td>
                                                    <td>@evt.Bin?.Name</td>
                                                    <td>@evt.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No recent recycling activities found.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
