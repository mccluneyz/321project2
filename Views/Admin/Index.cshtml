@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Navigation -->
            <div class="page-navigation mb-4">
                <a href="/Admin/AllRecyclingEvents" class="btn btn-outline-primary">
                    <span>📊</span> All Events
                </a>
                <a href="/Admin/FlaggedEvents" class="btn btn-outline-warning">
                    <span>🚩</span> Flagged Events
                </a>
                <a href="/Admin/ManageEvents" class="btn btn-outline-success">
                    <span>📅</span> Manage Calendar Events
                </a>
                <a href="/Admin/ManageUsers" class="btn btn-outline-info">
                    <span>👥</span> Manage Users
                </a>
                <a href="/Admin/ManageBins" class="btn btn-outline-success">
                    <span>🗑️</span> Manage Bins
                </a>
                <a href="/Admin/ManageMaterials" class="btn btn-outline-secondary">
                    <span>♻️</span> Manage Materials
                </a>
            </div>

            <h1 class="mb-4">👑 Admin Dashboard</h1>
            
            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Dashboard Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">👥 Total Users</h5>
                            <h2 class="text-primary">@ViewBag.TotalUsers</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">📊 Total Events</h5>
                            <h2 class="text-success">@ViewBag.TotalEvents</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">🚩 Flagged Events</h5>
                            <h2 class="text-warning">@ViewBag.FlaggedEvents</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">🗑️ Total Bins</h5>
                            <h2 class="text-info">@ViewBag.TotalBins</h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">⚡ Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/Admin/AllRecyclingEvents" class="btn btn-primary w-100 mb-2">
                                📊 View All Recycling Events
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/Admin/FlaggedEvents" class="btn btn-warning w-100 mb-2">
                                🚩 Review Flagged Events
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/Admin/ManageUsers" class="btn btn-info w-100 mb-2">
                                👥 Manage Users
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/Admin/ManageEvents" class="btn btn-success w-100 mb-2">
                                📅 Manage Calendar Events
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/Admin/ManageBins" class="btn btn-success w-100 mb-2">
                                🗑️ Manage Recycling Bins
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/Admin/ManageMaterials" class="btn btn-secondary w-100 mb-2">
                                ♻️ Manage Materials
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Admin Notice -->
            <div class="alert alert-info mt-4" role="alert">
                <h6 class="alert-heading">👑 Admin Access</h6>
                <p class="mb-0">You have full administrative access to manage users, events, bins, and materials. Use the navigation above to access different admin functions.</p>
            </div>
        </div>
    </div>
</div>
