@{
    ViewData["Title"] = "Manage Materials";
    var materials = ViewBag.Materials as List<RecycleRank.Models.Material> ?? Model as List<RecycleRank.Models.Material>;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Navigation -->
            <div class="page-navigation mb-4">
                <a href="/Admin/Index" class="btn btn-outline-secondary">
                    <span>‚öôÔ∏è</span> Admin Dashboard
                </a>
                <a href="/Home/Index" class="btn btn-outline-primary">
                    <span>üè†</span> Home
                </a>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">üì¶ Manage Materials</h1>
                <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#addMaterialModal">
                    <i class="fas fa-plus"></i> Add New Material
                </button>
            </div>

            <!-- Materials List -->
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Current Recyclable Materials</h5>
                </div>
                <div class="card-body">
                    @if (materials != null && materials.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Material Name</th>
                                        <th>Points Per Unit</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var material in materials)
                                    {
                                        <tr>
                                            <td>@material.Id</td>
                                            <td>@material.Name</td>
                                            <td>
                                                <span class="badge bg-primary">@material.PointsPerUnit points</span>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editMaterialModal" onclick="loadMaterialData(@material.Id, '@material.Name', @material.PointsPerUnit)">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                <form action="/Admin/DeleteMaterial" method="post" style="display: inline;">
                                                    <input type="hidden" name="materialId" value="@material.Id">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete the material &quot;@material.Name&quot;?')">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-boxes fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No materials found</h5>
                            <p class="text-muted">Add your first recyclable material to get started!</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Material Statistics -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">üìä Material Statistics</h6>
                        </div>
                        <div class="card-body">
                            @if (materials != null && materials.Any())
                            {
                                <p><strong>Total Materials:</strong> @materials.Count</p>
                                <p><strong>Average Points:</strong> @materials.Average(m => m.PointsPerUnit).ToString("F1")</p>
                                <p><strong>Highest Value:</strong> @materials.Max(m => m.PointsPerUnit) points (@materials.First(m => m.PointsPerUnit == materials.Max(mat => mat.PointsPerUnit)).Name)</p>
                                <p><strong>Lowest Value:</strong> @materials.Min(m => m.PointsPerUnit) points (@materials.First(m => m.PointsPerUnit == materials.Min(mat => mat.PointsPerUnit)).Name)</p>
                            }
                            else
                            {
                                <p class="text-muted">No statistics available.</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">üí° Tips</h6>
                        </div>
                        <div class="card-body">
                            <ul class="mb-0">
                                <li>Higher point values encourage recycling of rare materials</li>
                                <li>Consider environmental impact when setting point values</li>
                                <li>Regular materials (plastic, paper) typically have lower values</li>
                                <li>Special materials (electronics, batteries) should have higher values</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Material Modal -->
<div class="modal fade" id="addMaterialModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Material</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/CreateMaterial" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Material Name</label>
                        <input type="text" class="form-control" id="name" name="name" required placeholder="e.g., Plastic Bottles">
                    </div>
                    <div class="mb-3">
                        <label for="pointsPerUnit" class="form-label">Points Per Unit</label>
                        <input type="number" class="form-control" id="pointsPerUnit" name="pointsPerUnit" required min="1" placeholder="e.g., 10">
                        <div class="form-text">Higher values encourage recycling of this material</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-info">Add Material</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Material Modal -->
<div class="modal fade" id="editMaterialModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Material</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/UpdateMaterial" method="post">
                <div class="modal-body">
                    <input type="hidden" id="editMaterialId" name="materialId">
                    <div class="mb-3">
                        <label for="editName" class="form-label">Material Name</label>
                        <input type="text" class="form-control" id="editName" name="name" required placeholder="e.g., Plastic Bottles">
                    </div>
                    <div class="mb-3">
                        <label for="editPointsPerUnit" class="form-label">Points Per Unit</label>
                        <input type="number" class="form-control" id="editPointsPerUnit" name="pointsPerUnit" required min="1" placeholder="e.g., 10">
                        <div class="form-text">Higher values encourage recycling of this material</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Update Material</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function loadMaterialData(id, name, pointsPerUnit) {
    document.getElementById('editMaterialId').value = id;
    document.getElementById('editName').value = name;
    document.getElementById('editPointsPerUnit').value = pointsPerUnit;
}
</script>
