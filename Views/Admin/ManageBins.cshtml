@{
    ViewData["Title"] = "Manage Bins";
    var bins = ViewBag.Bins as List<RecycleRank.Models.Bin> ?? Model as List<RecycleRank.Models.Bin>;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Navigation -->
            <div class="page-navigation mb-4">
                <a href="/Admin/Index" class="btn btn-outline-secondary">
                    <span>‚öôÔ∏è</span> Admin Dashboard
                </a>
                <a href="/Home/Index" class="btn btn-outline-primary">
                    <span>üè†</span> Home
                </a>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">üóëÔ∏è Manage Recycling Bins</h1>
                <div>
                    <a href="/Recycling/Map" class="btn btn-info me-2">
                        <i class="fas fa-map-marked-alt"></i> View on Map
                    </a>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addBinModal">
                        <i class="fas fa-plus"></i> Add New Bin
                    </button>
                </div>
            </div>

            <!-- Bins List -->
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Current Recycling Bins</h5>
                </div>
                <div class="card-body">
                    @if (bins != null && bins.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bin in bins)
                                    {
                                        <tr>
                                            <td>@bin.Id</td>
                                            <td>@bin.Name</td>
                                            <td>@bin.Address</td>
                                            <td>
                                                <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editBinModal" onclick="loadBinData(@bin.Id, '@bin.Name', '@bin.Address', @bin.Latitude, @bin.Longitude)">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                <form action="/Admin/DeleteBin" method="post" style="display: inline;">
                                                    <input type="hidden" name="binId" value="@bin.Id">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete the bin &quot;@bin.Name&quot;?')">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-trash-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No recycling bins found</h5>
                            <p class="text-muted">Add your first recycling bin to get started!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bin Modal -->
<div class="modal fade" id="addBinModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Recycling Bin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/CreateBin" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Bin Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" name="address" required>
                        <small class="form-text text-muted">Coordinates will be automatically determined from the address.</small>
                    </div>
                    <input type="hidden" id="latitude" name="latitude" value="33.2119">
                    <input type="hidden" id="longitude" name="longitude" value="-87.5487">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Add Bin</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Bin Modal -->
<div class="modal fade" id="editBinModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Recycling Bin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/UpdateBin" method="post">
                <div class="modal-body">
                    <input type="hidden" id="editBinId" name="binId">
                    <div class="mb-3">
                        <label for="editName" class="form-label">Bin Name</label>
                        <input type="text" class="form-control" id="editName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="editAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="editAddress" name="address" required>
                        <small class="form-text text-muted">Coordinates will be automatically determined from the address.</small>
                    </div>
                    <input type="hidden" id="editLatitude" name="latitude">
                    <input type="hidden" id="editLongitude" name="longitude">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Update Bin</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function loadBinData(id, name, address, latitude, longitude) {
    document.getElementById('editBinId').value = id;
    document.getElementById('editName').value = name;
    document.getElementById('editAddress').value = address;
    document.getElementById('editLatitude').value = latitude;
    document.getElementById('editLongitude').value = longitude;
}

// Function to geocode address and get coordinates
async function geocodeAddress(address, latitudeField, longitudeField) {
    try {
        // For demo purposes, we'll use a simple geocoding approach
        // In a real application, you'd use Google Maps API or similar
        const response = await fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}&limit=1`);
        const data = await response.json();
        
        if (data && data.length > 0) {
            const lat = parseFloat(data[0].lat);
            const lon = parseFloat(data[0].lon);
            document.getElementById(latitudeField).value = lat;
            document.getElementById(longitudeField).value = lon;
            return { lat, lon };
        } else {
            // Fallback to UA campus coordinates if geocoding fails
            document.getElementById(latitudeField).value = 33.2119;
            document.getElementById(longitudeField).value = -87.5487;
            return { lat: 33.2119, lon: -87.5487 };
        }
    } catch (error) {
        console.log('Geocoding failed, using default coordinates');
        // Fallback to UA campus coordinates
        document.getElementById(latitudeField).value = 33.2119;
        document.getElementById(longitudeField).value = -87.5487;
        return { lat: 33.2119, lon: -87.5487 };
    }
}

// Add event listeners for address input
document.addEventListener('DOMContentLoaded', function() {
    const addressInput = document.getElementById('address');
    const editAddressInput = document.getElementById('editAddress');
    
    if (addressInput) {
        addressInput.addEventListener('blur', function() {
            if (this.value.trim()) {
                geocodeAddress(this.value, 'latitude', 'longitude');
            }
        });
    }
    
    if (editAddressInput) {
        editAddressInput.addEventListener('blur', function() {
            if (this.value.trim()) {
                geocodeAddress(this.value, 'editLatitude', 'editLongitude');
            }
        });
    }
});
</script>
