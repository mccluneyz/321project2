@model IEnumerable<RecycleRank.Models.User>
@{
    ViewData["Title"] = "Leaderboard";
}

<style>
    .rank-icon {
        font-size: 1.2rem;
        margin-right: 8px;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .equipped-title {
        font-style: italic;
        opacity: 0.8;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Navigation -->
            <div class="page-navigation mb-4">
                <a href="/Home/Index" class="btn btn-outline-primary">
                    <span>üè†</span> Home
                </a>
                <a href="/Recycling/Index" class="btn btn-outline-success">
                    <span>‚ôªÔ∏è</span> Recycling
                </a>
                <a href="/Recycling/Map" class="btn btn-outline-info">
                    <span>üó∫Ô∏è</span> Map
                </a>
                <a href="/Admin/Index" class="btn btn-outline-secondary">
                    <span>‚öôÔ∏è</span> Admin
                </a>
            </div>
            
            <h1 class="mb-4">üèÜ Global Leaderboard</h1>
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-success">
                                <tr>
                                    <th>Rank</th>
                                    <th>Name</th>
                                    <th>Points</th>
                                    <th>Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int rank = 1;
                                }
                                @foreach (var user in Model)
                                {
                                    var rankStyle = ViewBag.GetRankStyle(user.Rank);
                                    <tr>
                                        <td>
                                            @if (rank <= 3)
                                            {
                                                <span class="badge bg-warning">@rank</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@rank</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="rank-icon" style="color: @rankStyle.Color; text-shadow: 0 0 8px @rankStyle.GlowColor;">@rankStyle.Icon</span>
                                            <span style="color: @rankStyle.Color; font-weight: 600;">@user.Name</span>
                                            @{
                                                var equippedTitle = ((List<RecycleRank.Models.UserReward>)ViewBag.UserRewards)
                                                    .FirstOrDefault(ur => ur.UserId == user.Id);
                                            }
                                            @if (equippedTitle != null)
                                            {
                                                <span class="equipped-title" style="color: #6c757d; font-size: 0.9em; margin-left: 8px;">@equippedTitle.RewardValue</span>
                                            }
                                        </td>
                                        <td>@user.TotalPointsEarned</td>
                                        <td>
                                            <span class="badge" style="background-color: @rankStyle.Color; color: white;">@user.Rank</span>
                                        </td>
                                    </tr>
                                    rank++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
