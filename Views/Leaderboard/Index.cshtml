@model IEnumerable<RecycleRank.Models.User>
@{
    ViewData["Title"] = "Leaderboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Navigation -->
            <div class="page-navigation mb-4">
                <a href="/Home/Index" class="btn btn-outline-primary">
                    <span>üè†</span> Home
                </a>
                <a href="/Recycling/Index" class="btn btn-outline-success">
                    <span>‚ôªÔ∏è</span> Recycling
                </a>
                <a href="/Recycling/Map" class="btn btn-outline-info">
                    <span>üó∫Ô∏è</span> Map
                </a>
                <a href="/Admin/Index" class="btn btn-outline-secondary">
                    <span>‚öôÔ∏è</span> Admin
                </a>
            </div>
            
            <h1 class="mb-4">üèÜ Global Leaderboard</h1>
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-success">
                                <tr>
                                    <th>Rank</th>
                                    <th>Name</th>
                                    <th>Points</th>
                                    <th>Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int rank = 1;
                                }
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (rank <= 3)
                                            {
                                                <span class="badge bg-warning">@rank</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@rank</span>
                                            }
                                        </td>
                                        <td>@user.Name</td>
                                        <td>@user.Points</td>
                                        <td>
                                            <span class="badge bg-info">@user.Rank</span>
                                        </td>
                                    </tr>
                                    rank++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
