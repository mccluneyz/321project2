@{
    ViewData["Title"] = "Register";
}

<div class="container" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow" style="border-radius: 20px; border: none;">
                <div class="card-header bg-success text-white text-center" style="border-radius: 20px 20px 0 0; padding: 25px;">
                    <h3>♻️ Join RecycleRank</h3>
                    <p class="mb-0" style="opacity: 0.9;">Create your account and start recycling!</p>
                </div>
                <div class="card-body" style="padding: 30px;">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                    
                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg" style="border-radius: 10px; padding: 12px;">
                                Create Account
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <p>Already have an account? <a href="/Account/Login" style="color: #28a745; font-weight: 500; text-decoration: underline;">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
