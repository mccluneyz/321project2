@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="mb-4">Privacy Policy</h1>
            <p class="lead">Your privacy is important to us.</p>
            <p>This privacy policy explains how RecycleRank collects, uses, and protects your information when you use our service.</p>
            
            <h3>Information We Collect</h3>
            <ul>
                <li>Email address and name for account creation</li>
                <li>Recycling activity data (materials, quantities, locations)</li>
                <li>Points and ranking information</li>
            </ul>
            
            <h3>How We Use Your Information</h3>
            <ul>
                <li>To track your recycling progress and award points</li>
                <li>To display your ranking on leaderboards</li>
                <li>To improve our service and features</li>
            </ul>
            
            <h3>Data Security</h3>
            <p>We implement appropriate security measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction.</p>
        </div>
    </div>
</div>
